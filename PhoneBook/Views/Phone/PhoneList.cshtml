@using Resource
@using Entity
@model IEnumerable<Phone>

@{

    ViewBag.Title = Resource.PhoneResource.PhoneList;
}

<h2>
    @Resource.PhoneResource.PhoneList
</h2>

<p>
    @Html.ActionLink(Resource.PhoneResource.NewPhoneBook,
    EnglishResourse.Create)
</p>
<div class="container">
    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tell)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.ActionLink(PhoneResource.Edit,
                   EnglishResourse.Edit, new { id = item.Id }) |

                    <a href="@EnglishResourse.PhoneController/@EnglishResourse.Delete/@item.Id"
                       title="@PhoneResource.Delete"
                       onclick="return confirm('@PhoneResource.Sure')">
                        @PhoneResource.Delete

                    </a>

                </td>
            </tr>
        }

    </table>
</div>